//oop assigement no 3
#include<iostream>
using namespace std;
class Publication
{
    public:
    float price ;
    string name;
    publication()
    
    void add_data(string x ,int y){
        name=x;
        price =y;
    }
    void set_data(){
        cout<<"the name of book:"<<name<<endl;
        cout<<"the price of the book:"<<price<<endl;
    }
};
class page: public Publication 
{
    public:
    int pagecount;
    void set_data1(int x){
        pagecount = x;
    }
    void get_data1(){
        cout<<"the pagecout:"<<pagecount<<endl;
    }
};

class cassete: public Publication
{
    public:
    int playtime;
    void set_data2(int x){
        playtime =x;
    }
    void get_data2(){
        cout<<"the playtime of cassete:"<<playtime<<endl;
    }
};
int main(){
    Publication s1;
    int a1;
    string s;
    cout<<"enter the name of the book:"<<endl;
    cin>>s;
    cout<<"enter the count of page:"<<endl;
    cin>>a1;
    s1.add_data(s ,a1);
    s1.set_data();
    
    int s2 , s3;
    cout<<"enter the pagecount of the book:"<<endl;
    cin>>s2;
    cout<<"enter the playtime of the book:"<<endl
    cin>>s3;
    
    page p1;
    cassete c1;
    
    p1.set_data1(s2);
    p1.get_data1();
    
    c1.set_data2(s3);
    c1.get_data2();
    
    
    
}
